# Database
DATABASE_URL=postgresql://user:password@localhost:5432/database

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_REFRESH_EXPIRES_IN=30d

# Supabase Storage (Optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_STORAGE_BUCKET=product-images

# Email (For password reset, activation)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourstore.com

# Frontend URLs
FRONTEND_URL=http://localhost:3000

# VNPAY Payment Gateway
# Sandbox: https://sandbox.vnpayment.vn/merchant_webapi/merchant.html
# Đăng ký tài khoản test tại: https://sandbox.vnpayment.vn/demoreg
VNPAY_TMN_CODE=your-vnpay-terminal-code
VNPAY_HASH_SECRET=your-vnpay-secret-key
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:3001/api/v1/payment/vnpay-return

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# RASA Chatbot (Optional)
RASA_SERVER_URL=http://localhost:5005

# Chatbot Internal APIs
# IMPORTANT: Change this to a strong random key in production
INTERNAL_API_KEY=chatbot-internal-key-change-this-in-production

# Size Chart Image URLs
SIZE_CHART_SHIRT_URL=https://cdn.yoursite.com/size-charts/shirt.png
SIZE_CHART_PANTS_URL=https://cdn.yoursite.com/size-charts/pants.png
SIZE_CHART_SHOES_URL=https://cdn.yoursite.com/size-charts/shoes.png

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here
